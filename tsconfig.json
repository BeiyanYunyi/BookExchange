{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "frontend/src/**/*.tsx",
    "frontend/src/**/*.vue",
    "frontend/src/**/*.ts",
    "frontend/src/**/*.d.ts",
    "backend/src/**/*.ts",
    "backend/src/**/*.d.ts",
    "types/**/*.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
